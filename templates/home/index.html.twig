{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<h1 style="text-align: center; margin:4vh;">Bienvenue {{app.user.pseudo}}</h1>

<table class="table3">
    <thead>
        <thead>
            <tr>
            <th>Intitulé Session</th>
            <th>Date de debut</th>
            <th>Date de fin</th>
            <th>Nombre de places</th>
            <th>Places reservées</th>
            <th>Places disponible</th>
            <th>Détail Programme</th>
        </tr>
    </thead>
    <tbody>
        {% for session in sessions %}
        <tr>
            <td>{{session}}</td>
            <td>{{session.dateDebut| date ('d/m/Y')}}</td>
            <td>{{session.dateFin| date ('d/m/Y')}}</td>
            <td>{{session.nbPlaces}}</td>
            <td>{{session.reservations}}</td>
            <td>{{session.disponibles}}</td>
            <td><a href="#">Lien</a></td>
        </tr> 
        {% endfor %}
    </tbody>
</table>

{% endblock %}
